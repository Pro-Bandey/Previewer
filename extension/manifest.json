{
  "manifest_version": 3,
  "name": "GitPreview Dev",
  "version": "1.0",
  "description": "Preview HTML files from GitHub in a Sandbox or Sidebar.",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "GitPreview"
  },
  "side_panel": {
    "default_path": "ui/side.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  }
}